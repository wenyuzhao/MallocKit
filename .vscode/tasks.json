    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "cargo build",
            "group": "build"
        },
        {
            "label": "Test",
            "type": "shell",
            "command": "cargo test",
            "group": "test",
            "presentation": {
                "reveal": "always",
            }
        },
        {
            "label": "Build (release)",
            "type": "shell",
            "command": "cargo build --release",
            "group": "build"
        },
        {
            "label": "Test (release)",
            "type": "shell",
            "command": "cargo test --release",
            "group": "test",
            "presentation": {
                "reveal": "always",
            }
        },
    ]
}